@{
    ViewData["Title"] = "Inicio";
}



@* CARACTERÍSTICAS PRINCIPALES *@
<section class="mb-20">
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-3">¿Por qué elegir <span class="text-[#E31E24]">TopMeal</span>?</h2>
        <p class="text-gray-600">Todo lo que necesitas para una experiencia perfecta</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        @* Característica 1: Menú Online *@
        <div class="bg-white border-2 border-gray-100 rounded-2xl p-8 hover:border-[#E31E24] transition-all hover:shadow-lg group">
            <div class="w-14 h-14 bg-red-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-[#E31E24] transition-colors">
                <svg class="w-7 h-7 text-[#E31E24] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Carta Online</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
                Explora nuestro menú completo con imágenes, descripciones detalladas y precios actualizados.
            </p>
            <a asp-controller="Menu" asp-action="Index" class="text-[#E31E24] font-semibold text-sm hover:underline">
                Ver carta →
            </a>
        </div>

        @* Característica 2: Pedidos Online *@
        <div class="bg-white border-2 border-gray-100 rounded-2xl p-8 hover:border-[#E31E24] transition-all hover:shadow-lg group">
            <div class="w-14 h-14 bg-red-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-[#E31E24] transition-colors">
                <svg class="w-7 h-7 text-[#E31E24] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Pedidos Online</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
                Realiza tu pedido para domicilio o recogida. Pago seguro y seguimiento en tiempo real.
            </p>
            <a asp-controller="Menu" asp-action="Index" class="text-[#E31E24] font-semibold text-sm hover:underline">
                Hacer pedido →
            </a>
        </div>

        @* Característica 3: Reservas *@
        <div class="bg-white border-2 border-gray-100 rounded-2xl p-8 hover:border-[#E31E24] transition-all hover:shadow-lg group">
            <div class="w-14 h-14 bg-red-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-[#E31E24] transition-colors">
                <svg class="w-7 h-7 text-[#E31E24] group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Reservas de Mesa</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">
                Reserva tu mesa de forma rápida y sencilla. Elige día, hora y número de comensales.
            </p>
            <span class="text-gray-400 font-semibold text-sm italic">
                Próximamente →
            </span>
        </div>
    </div>
</section>

@* FUNCIONALIDADES ADICIONALES *@
<section class="mb-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        @* Cupones de Descuento *@
        <div class="bg-gradient-to-br from-red-50 to-white border border-red-100 rounded-2xl p-8 relative overflow-hidden">
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-[#E31E24] rounded-full opacity-10"></div>
            <div class="relative z-10">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-[#E31E24] rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Cupones y Ofertas</h3>
                </div>
                <p class="text-gray-700 mb-4 text-sm">
                    Descuentos exclusivos para clientes registrados. Aprovecha nuestras promociones especiales.
                </p>
                <span class="inline-block bg-[#E31E24] text-white px-4 py-2 rounded-lg text-xs font-bold uppercase tracking-wider">
                    ¡Ahorra hasta 20%!
                </span>
            </div>
        </div>

        @* Valoraciones *@
        <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 relative overflow-hidden">
            <div class="absolute -top-10 -right-10 w-32 h-32 bg-gray-300 rounded-full opacity-10"></div>
            <div class="relative z-10">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-12 h-12 bg-gray-900 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Opiniones Verificadas</h3>
                </div>
                <p class="text-gray-700 mb-4 text-sm">
                    Lee las experiencias de nuestros clientes y comparte la tuya después de tu visita.
                </p>
                <div class="flex items-center gap-2">
                    <div class="flex">
                        @for (int i = 0; i < 5; i++)
                        {
                            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                        }
                    </div>
                    <span class="text-gray-600 font-semibold text-sm">4.8/5 (250+ opiniones)</span>
                </div>
            </div>
        </div>
    </div>
</section>

@* CALL TO ACTION FINAL *@
<section class="bg-gradient-to-r from-[#E31E24] to-[#c51a1f] rounded-3xl p-12 md:p-16 text-center text-white shadow-2xl">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">¿Listo para empezar?</h2>
    <p class="text-red-100 text-lg mb-8 max-w-2xl mx-auto">
        Únete a TopMeal y disfruta de la mejor experiencia gastronómica con un solo click.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        @if (Context.Session.GetInt32("ID_USUARIO") != null)
        {
            <a asp-controller="Menu" asp-action="Index" 
               class="w-full sm:w-auto bg-white text-[#E31E24] px-10 py-4 rounded-xl font-bold uppercase tracking-wider text-sm hover:bg-gray-100 transition-all shadow-lg">
                Explorar Menú
            </a>
        }
        else
        {
            <a asp-controller="Acceso" asp-action="Register" 
               class="w-full sm:w-auto bg-white text-[#E31E24] px-10 py-4 rounded-xl font-bold uppercase tracking-wider text-sm hover:bg-gray-100 transition-all shadow-lg">
                Registrarse Ahora
            </a>
            <a asp-controller="Acceso" asp-action="Login" 
               class="w-full sm:w-auto bg-transparent border-2 border-white text-white px-10 py-4 rounded-xl font-bold uppercase tracking-wider text-sm hover:bg-white hover:text-[#E31E24] transition-all">
                Iniciar Sesión
            </a>
        }
    </div>
</section>


