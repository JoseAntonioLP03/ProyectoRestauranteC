@{
    ViewData["Title"] = "Inicio";
}

<div class="bg-white rounded-2xl shadow-xl border border-gray-100 px-8 py-16 md:py-20 text-center max-w-3xl mx-auto mb-16">
    <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tighter mb-4 text-black">
        Bienvenido a <span class="text-[#E31E24]">TOPMEAL</span>
    </h1>
    
    <p class="text-lg md:text-xl text-gray-500 mb-10 max-w-xl mx-auto">
        Descubre el auténtico sabor de la cocina gourmet, directo a tu mesa
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a asp-controller="Home" asp-action="Privacy" 
           class="w-full sm:w-auto bg-[#E31E24] text-white px-8 py-4 rounded-xl font-black uppercase tracking-widest text-sm hover:bg-black transition-all shadow-lg shadow-red-200">
            Ver Menú
        </a>
        <a asp-controller="Acceso" asp-action="Register" 
           class="w-full sm:w-auto bg-white border-2 border-gray-200 text-gray-700 px-8 py-4 rounded-xl font-black uppercase tracking-widest text-sm hover:border-[#E31E24] hover:text-[#E31E24] transition-all">
            Regístrate
        </a>
    </div>
</div>


