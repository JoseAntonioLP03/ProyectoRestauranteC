@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TOPMEAL</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#FDFBF7] text-gray-900 font-sans flex flex-col min-h-screen">

    @* HEADER: Fondo crema claro con borde sutil *@
    <header class="bg-white/80 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-20 items-center">

                @* LADO IZQUIERDO: Tu Logo y Nombre *@
                <div class="flex items-center gap-3">
                    <img src="~/images/logo.png" alt="TOPMEAL" class="h-10 w-auto" />
                    <a class="text-2xl font-black tracking-tighter text-black hover:text-[#E31E24] transition-colors"
                       asp-controller="Home" asp-action="Index">
                        TOP<span class="text-[#E31E24]">MEAL</span>
                    </a>
                </div>

                @* CENTRO: Enlaces de navegación en Negro *@
                <div class="hidden md:flex space-x-10">
                    <a class="text-sm font-bold uppercase tracking-widest text-black hover:text-[#E31E24] transition"
                       asp-controller="Home" asp-action="Index">Inicio</a>
                    <a class="text-sm font-bold uppercase tracking-widest text-black hover:text-[#E31E24] transition"
                       asp-controller="Home" asp-action="Privacy">La Carta</a>
                </div>

                @* LADO DERECHO: Acceso de Usuarios *@
                <div class="flex items-center gap-6">
                    @if (Context.Session.GetInt32("ID_USUARIO") != null)
                    {
                        @* Usuario con sesión iniciada *@
                        <span class="text-sm font-bold text-black">
                            Hola, @Context.Session.GetString("NOMBRE_USUARIO")
                        </span>
                        <a asp-controller="Acceso" asp-action="Logout"
                           class="bg-[#E31E24] text-white px-6 py-2.5 rounded-full text-xs font-black uppercase tracking-widest hover:bg-black transition-all shadow-lg shadow-red-100 hover:shadow-none">
                            Cerrar Sesión
                        </a>
                    }
                    else
                    {
                        @* Usuario sin sesión *@
                        <a asp-controller="Acceso" asp-action="Login"
                           class="text-xs font-black uppercase tracking-widest text-black hover:text-[#E31E24] transition">
                            Entrar
                        </a>
                        <a asp-controller="Acceso" asp-action="Register"
                           class="bg-[#E31E24] text-white px-6 py-2.5 rounded-full text-xs font-black uppercase tracking-widest hover:bg-black transition-all shadow-lg shadow-red-100 hover:shadow-none">
                            Registrarse
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    @* CONTENIDO PRINCIPAL *@
    <div class="flex-grow max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-10">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* FOOTER: Elegante y minimalista *@
    <footer class="bg-black text-white py-12">
        <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 items-center gap-8 text-center md:text-left">
            <div>
                <span class="text-2xl font-black tracking-tighter uppercase">
                    TOP<span class="text-[#E31E24]">MEAL</span>
                </span>
                <p class="text-gray-400 text-sm mt-2 font-medium italic">Sabor real en cada pedido.</p>
            </div>
            <div class="md:text-right">
                <p class="text-gray-500 text-xs uppercase tracking-widest">
                    &copy; 2026 - Gourmet App Project - <a asp-controller="Home" asp-action="Privacy" class="hover:text-[#E31E24]">Privacidad</a>
                </p>
            </div>
        </div>
    </footer>

    @* Scripts *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>